{{! Sheet Header }}
<header class='sheet-header grid-header'>
	<div class='grid-header'>
		<div class='document-name HedCol1'>
			<input style='font-size: 35px;max-width: 445px;	height: auto;' name='name' type='text' value='{{actor.name}}' placeholder='Name' />
		</div>

		{{#if (eq actor.type 'animal')}}
			<label for='system.general.subtype' class='resource-label HedCol7'>{{toUpperCase (localize 'TALESOFTHEOLDWEST.Item.General.type')}}</label>
			<select class='HedCol10' id='system.general.subtype' name='system.general.subtype'>
				{{selectOptions config.animal_subtypes_list selected=system.general.subtype labelAttr='label' localize=true}}
			</select>

			{{#if (eq actor.system.general.subtype 'horse')}}
				<label for='system.general.breed' class='resource-label HedCol3'>{{toUpperCase (localize 'TALESOFTHEOLDWEST.General.breed')}}</label>
				<select class='HedCol4' id='system.general.breed' name='system.general.breed'>
					{{selectOptions config.animal_breed_list selected=system.general.breed labelAttr='label' localize=true}}
				</select>

				<label class='resource-label HedCol5' for='system.general.ridingmodifier.value'>{{toUpperCase
						(localize 'TALESOFTHEOLDWEST.General.riding-bonus')
					}}</label>
				<input class='experience HedCol6' name='system.general.ridingmodifier.value' value='{{system.general.ridingmodifier.value}}' data-dtype='Number' />

				<label class='resource-label HedCol9' style='text-align: center; align-self: center;font-size: larger;' for='system.general.cost'>{{toUpperCase
						(localize 'TALESOFTHEOLDWEST.General.cost')
					}}</label>
				<input class='currency HedCol12' name='system.general.cost' value='{{system.general.cost}}' data-dtype='String' />

			{{/if}}
		{{/if}}
		{{#if (eq actor.type 'pc')}}
			<label for='system.general.archetype' class='resource-label HedCol3'>{{toUpperCase (localize 'TALESOFTHEOLDWEST.General.archetype')}}</label>
			<select class='HedCol4' id='system.general.archetype' name='system.general.archetype'>
				{{selectOptions config.archetype_list selected=system.general.archetype labelAttr='label' localize=true}}
			</select>
			<label for='system.general.groupconcept' class='resource-label HedCol5'>{{toUpperCase (localize 'TALESOFTHEOLDWEST.General.groupConcept')}}</label>
			<select class='HedCol6' id='system.general.groupconcept' name='system.general.groupconcept'>
				{{selectOptions config.group_concept_list selected=system.general.groupconcept labelAttr='label' localize=true}}
			</select>

			<label for='system.general.yourpardner' class='resource-label HedCol7'>{{toUpperCase (localize 'TALESOFTHEOLDWEST.General.your-pardner')}}</label>
			<input class='HedCol10' type='text' name='system.general.yourpardner' value='{{system.general.yourpardner}}' data-dtype='text' />

			<label for='system.general.faith' class='resource-label HedCol8'>{{toUpperCase (localize 'TALESOFTHEOLDWEST.General.faith')}}</label>
			<textarea class='textarea-format HedCol11' name='system.general.faith' data-dtype='String' rows='2'>{{system.general.faith}}</textarea>

			<div
				class='newdots click-damage-level HedCol12'
				style='font-size: x-large;'
				data-tooltip='{{localize "TALESOFTHEOLDWEST.General.leftToAdd"}}'
				data-action='changeFaith'
			>
				{{#times system.general.faithpoints.value}}
					<i class='far fa-dot-circle'></i>
				{{/times}}
				{{#times system.general.faithpoints.max}}<i class='far fa-circle'></i>{{/times}}
			</div>
		{{/if}}
		{{#if (eq actor.type 'npc')}}
			<label for='system.general.archetype' class='resource-label HedCol3'>{{toUpperCase (localize 'TALESOFTHEOLDWEST.General.archetype')}}</label>
			<select class='HedCol4' id='system.general.archetype' name='system.general.archetype'>
				{{selectOptions config.archetype_list selected=system.general.archetype labelAttr='label' localize=true}}
			</select>
		{{/if}}

		<img class='profile-img grid-header HedCol2' src='{{actor.img}}' data-edit='img' data-action='onEditImage' title='{{actor.name}}' />
	</div>
</header>