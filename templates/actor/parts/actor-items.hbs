<section class='tab items {{tab.cssClass}}' data-group='primary' data-tab='gear'>
	<div class='sheet-gear-cash'>
		<div class='L1C1'>
			<label for='system.general.age.value' class='resource-label'>{{toUpperCase (localize 'TALESOFTHEOLDWEST.General.age')}}</label>
		</div>
		<div class='L1C2'>
			<input class='statnum' name='system.general.age.value' value='{{system.general.age.value}}' data-dtype='Number' />
		</div>
		<div class='L1C3'>
			<label for='system.general.fame.value' class='resource-label'>{{toUpperCase (localize 'TALESOFTHEOLDWEST.General.fame')}}</label>
		</div>
		<div class='L1C4'>
			<input class='statnum' name='system.general.fame.value' value='{{system.general.fame.value}}' data-dtype='Number' />
		</div>
		<div class='L1C5'>
			<label for='system.general.morals.value' class='resource-label'>{{toUpperCase (localize 'TALESOFTHEOLDWEST.General.morals')}}</label>
		</div>
		<div class='L1C6'>
			<input class='statnum' name='system.general.morals.value' value='{{system.general.morals.value}}' data-dtype='Number' />
		</div>
		<div class='L1C7'>
			<label for='system.general.publicspirit.value' class='resource-label'>{{toUpperCase (localize 'TALESOFTHEOLDWEST.General.publicspirit')}}</label>
		</div>
		<div class='L1C8'>
			<input class='statnum' name='system.general.publicspirit.value' value='{{system.general.publicspirit.value}}' data-dtype='Number' />
		</div>

		<div class='L2C1'>
			<label for='system.general.cash.value' class='resource-label align-left'>{{toUpperCase (localize 'TALESOFTHEOLDWEST.General.cash')}} </label>
		</div>
		<div class='L2C2'>
			<input class='currency' name='system.general.cash.value' value='{{system.general.cash.value}}' data-dtype='Number' />
		</div>

		<div class='L2C3'>
			<label for='system.general.capital.value' class='resource-label align-left'>{{toUpperCase (localize 'TALESOFTHEOLDWEST.General.capital')}} </label>
		</div>
		<div class='L2C4'>
			<input class='currency' name='system.general.capital.value' value='{{system.general.capital.value}}' data-dtype='Number' />
		</div>
		<div class='L2C5'>
			<label for='system.general.xp.value' class='resource-label align-left'>{{toUpperCase (localize 'TALESOFTHEOLDWEST.General.experience')}}</label>
		</div>
		<div class='newdots click-damage-level L2C6' title='{{localize "TALESOFTHEOLDWEST.General.leftToAdd"}}' data-action='changeXp'>
			{{#times system.general.xp.value}}
				<i class='far fa-dot-circle'></i>
			{{/times}}
			{{#times system.general.xp.max}}<i class='far fa-circle'></i>{{/times}}
		</div>
		<div class='L3C1'>
			<label for='system.general.reputation' class='resource-label'>{{toUpperCase (localize 'TALESOFTHEOLDWEST.General.reputation')}}</label>
		</div>
		<div class='L3C2'>
			<input name='system.general.reputation' class='resource-label' style='width: 300px;' value='{{system.general.reputation}}' data-dtype='String' />
		</div>
		<div class='L3C3'>
			<label for='system.general.lifestyle' class='resource-label'>{{toUpperCase (localize 'TALESOFTHEOLDWEST.General.lifestyle')}}</label>
		</div>
		<div class='L3C4'>
			<input name='system.general.lifestyle' class='resource-label' style='width: 300px;' value='{{system.general.lifestyle}}' data-dtype='String' />
		</div>
	</div>

	<div>
		<ol class='items-list'>
			<li class='item grid-talent-items items-header'>
				<div class='item-name TCol2'>{{toUpperCase (localize 'TALESOFTHEOLDWEST.General.name')}}</div>
				<div class='item-controls TCol4'>
					<a
						class='item-control item-create'
						title='{{localize "DOCUMENT.Create" type='Item'}}'
						data-action='createDoc'
						data-document-class='Item'
						data-origin='{{@root.item.uuid}}'
						data-actor='{{actor.id}}'
						data-img='icons/svg/aura.svg'
						data-type='item'
					>
						<i class='fas fa-plus'></i>
						{{localize 'DOCUMENT.New' type='item'}}
					</a>
				</div>
			</li>
			{{#each gear as |item id|}}
				<li class='item grid-talent-items' data-item-id='{{item._id}}' data-drag='true' data-document-class='Item'>
					{{! <div class='item-name'> }}
					<div class='item-image TCol11'>
						<a class='rollable' data-roll-type='item' data-action='roll'>
							<img src='{{item.img}}' title='{{item.name}}' width='24' height='24' />
						</a>
					</div>
					<div class='item-name TCol12' title='{{removeMarkup item.system.description}}'>{{item.name}}</div>
					{{! </div> }}
					<div class='item-controls TCol14'>
						<a class='item-control item-edit' data-action='viewDoc' data-actor='{{actor.id}}' title='{{localize "DOCUMENT.Update" type='Item'}}'>
							<i class='fas fa-edit'></i>
						</a>
						<a class='item-control item-delete' data-action='deleteDoc' data-actor='{{actor.id}}' title='{{localize "DOCUMENT.Delete" type='Item'}}'>
							<i class='fas fa-trash'></i>
						</a>
					</div>
				</li>
			{{/each}}
		</ol>
	</div>
</section>