<div>
	<ol class='items-list'>
		<li class='item grid-talent-items items-header'>
			<div class='item-name TCol2'>{{toUpperCase (localize 'TALESOFTHEOLDWEST.General.name')}}</div>
		</li>
	</ol>
</div>
<div class='small-box' style='max-height: 150px;'>
	<ol class='items-list'>
		{{#each @root.allGear as |item id|}}
			{{#if item.system.stored}}

				<li class='item grid-talent-items' data-item-id='{{item._id}}' data-drag='true' data-document-class='Item'>

					<div class='item-image TCol11' data-item='{{item.system.stored}}'>
						<a>
							<img src='{{item.img}}' data-tooltip='{{item.name}}' width='24' height='24' />
						</a>
					</div>
					<div class='item-name TCol12' data-tooltip='{{item.system.description}}'>{{item.name}}</div>

					<div class='item-controls TCol14'>
						<a
							class='item-control storeItem'
							data-action='storeItem'
							data-item-id='{{item._id}}'
							data-tooltip='{{localize "TALESOFTHEOLDWEST.General.rightToStore"}}'
						><i class='fa-solid fa-sack-dollar'></i></a></div>
				</li>
			{{/if}}
		{{/each}}
	</ol>
</div>