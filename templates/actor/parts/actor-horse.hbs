<div class="horse-header">
	<div class="document-name HorseCol1">
		<input
			style="font-size: 35px; max-width: 445px; height: auto"
			type="text"
			name="system.horse.name"
			value="{{system.horse.name}}"
			placeholder="Name"
			data-dtype="text"
		/>
	</div>
	<label for="system.general.breed" class="resource-label HorseCol2">{{toUpperCase (localize 'TALESOFTHEOLDWEST.General.breed')}}</label>
	<select class="HorseCol3" id="system.horse.general.breed" name="system.horse.general.breed">
		{{selectOptions config.animal_breed_list selected=system.horse.general.breed labelAttr='label' localize=true}}
	</select>

	<label class="resource-label HorseCol4" for="system.horse.general.ridingmodifier.value"
		>{{toUpperCase (localize 'TALESOFTHEOLDWEST.General.riding-bonus') }}</label
	>
	<input
		class="experience HorseCol5"
		name="system.horse.general.ridingmodifier.value"
		value="{{system.horse.general.ridingmodifier.value}}"
		data-dtype="Number"
	/>

	<label class="resource-label HorseCol6" style="text-align: center; align-self: center; font-size: larger" for="system.horse.general.cost"
		>{{toUpperCase (localize 'TALESOFTHEOLDWEST.General.cost') }}</label
	>
	<input class="currency HorseCol7" name="system.horse.general.cost" value="{{system.horse.general.cost}}" data-dtype="String" />
</div>

