<div style="height: 150px">{{>"systems/talesoftheoldwest/templates/actor/parts/horse-quality-options.hbs"}}</div>

<div class="gear-split" style="height: 130px">
	<div class="gearSplit2">
		<div class="heading" style="max-height: 100px">{{toUpperCase (localize 'TALESOFTHEOLDWEST.General.saddlebag')}}</div>
		<div>
			<ol class="items-list">
				<li class="item grid-talent-items items-header">
					<div class="item-name TCol2">{{toUpperCase (localize 'TALESOFTHEOLDWEST.General.name')}}</div>
				</li>
			</ol>
		</div>
		<div class="small-box" style="max-height: 100px">
			<ol class="items-list">
				{{#each gear as |item id|}}
				{{#if (eq item.system.stored true) }}
				<li class="item grid-talent-items" data-item-id="{{item._id}}" data-drag="true" data-document-class="Item">
					<div class='item-image TCol11' data-item='{{item.system.stored}}'>
						<a >
							<img src="{{item.img}}"  title='{{item.name}}' width="24" height="24" />
						</a>
					</div>
					<div class="item-name TCol12">{{item.name}}</div>
					<div class="item-controls TCol14">
						<a class='item-control storeItem' data-action='storeItem' data-item-id="{{item._id}}" title='{{localize "TALESOFTHEOLDWEST.General.rightToStore"}}'><i class="fa-solid fa-sack-dollar"></i>
						<a class='item-control item-edit' data-action='viewDoc' data-actor='{{actor.id}}' title='{{localize "DOCUMENT.Update" type='Item'}}'>
						<i class="fas fa-edit"></i>
						<a class='item-control item-delete' data-action='deleteDoc' data-actor='{{actor.id}}' title='{{localize "DOCUMENT.Delete" type='Item'}}'>
						<i class="fas fa-trash"></i>
					</div>
				</li>
				{{/if}}
				{{/each}}
			</ol>
		</div>
	</div>
	<div class="heading gearSplit1">
		{{toUpperCase (localize 'TALESOFTHEOLDWEST.General.description')}}
		<div class="div-border" style="width: 390px; justify-self: anchor-center">
			{{#if editable}}
			<prose-mirror name="system.horse.horseNotes" data-document-u-u-i-d="{{actor.uuid}}" value="{{system.horse.horseNotes}}" toggled="true" class="small-box">
				{{{enrichedHorseNotes}}}
			</prose-mirror>
			{{else}} {{{enrichedHorseNotes}}} {{/if}}
		</div>
	</div>
</div>
