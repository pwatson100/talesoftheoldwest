<div>
	<ol class='items-list'>
		<li class='item grid-talent-items items-header'>
			<div class='item-name TCol2'>{{toUpperCase (localize 'TALESOFTHEOLDWEST.General.name')}}</div>
			<div class='item-controls TCol4'>
				<a
					class='item-control item-create'
					data-tooltip='{{localize "DOCUMENT.Create" type='Item'}}'
					data-action='createDoc'
					data-document-class='Item'
					data-origin='{{@root.talent.uuid}}'
					data-actor='{{actor.id}}'
					data-img='icons/svg/aura.svg'
					data-type='item'
				>
					<i class='fas fa-plus'></i>
					{{localize 'DOCUMENT.New' type='item'}}
				</a>
			</div>
		</li>
	</ol>
</div>
<div class='small-box' style='max-height: 195px;'>
	<ol class='items-list'>
		{{#each gear as |item id|}}
			{{#if (not item.system.stored)}}
				<li class='item grid-talent-items' data-item-id='{{item._id}}' data-drag='true' data-document-class='Item'>
					<div class='item-image TCol11' data-item='{{item.system.stored}}'>
						<a>
							<img src='{{item.img}}' data-tooltip='{{item.name}}' width='24' height='24' />
						</a>
					</div>
					<div class='item-name TCol12' data-tooltip='{{item.system.description}}'>{{item.name}}</div>

					<div class='item-controls TCol14'>
						{{#if (eq actor.type 'pc')}}
							{{#if (ne actor.system.remuda.remudaMounted 'false')}}
								<a class='item-control storeItem' data-action='storeItem' data-item-id='{{item._id}}' data-tooltip='{{localize "TALESOFTHEOLDWEST.General.rightToStore"}}'><i
										class='fa-solid fa-sack-dollar'
									></i></a>
							{{/if}}
						{{/if}}

						<a class='item-control item-edit' data-action='viewDoc' data-actor='{{actor.id}}' data-tooltip='{{localize "DOCUMENT.Update" type='Item'}}'>
							<i class='fas fa-edit'></i>
						</a>
						<a class='item-control item-delete' data-action='deleteDoc' data-actor='{{actor.id}}' data-tooltip='{{localize "DOCUMENT.Delete" type='Item'}}'>
							<i class='fas fa-trash'></i>
						</a>
					</div>
				</li>
			{{/if}}
		{{/each}}
	</ol>
</div>