{{! Basic Tab }}
<section class='tab basic {{tab.cssClass}}' data-group='primary' data-tab='basic'>
	<div class='resource-label'>{{localize 'TALESOFTHEOLDWEST.General.isActive'}}
		<input class='' name='system.basicisActive' type='checkbox' {{checked system.basicisActive}} />
	</div>
	{{! Editors must receive enriched text data from getData to properly handle rolls, UUID links, etc. }}
	{{#if editable}}
		<prose-mirror name='system.basicAction' data-document-u-u-i-d='{{item.uuid}}' value='{{system.basicAction}}' toggled='true'>
			{{{enrichedBasic}}}
		</prose-mirror>
	{{else}}
		{{{enrichedBasic}}}
	{{/if}}
</section>