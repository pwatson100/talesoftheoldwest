{{! Advanced Tab }}
<section class='tab advanced {{tab.cssClass}}' data-group='primary' data-tab='advanced'>
	<div class='resource-label'>{{localize 'TALESOFTHEOLDWEST.General.isActive'}}
		<input class='' name='system.advisActive' type='checkbox' {{checked system.advisActive}} />
	</div>
	{{! Editors must receive enriched text data from getData to properly handle rolls, UUID links, etc. }}
	{{#if editable}}
		<prose-mirror name='system.advAction' data-document-u-u-i-d='{{item.uuid}}' value='{{system.advAction}}' toggled='true'>
			{{{enrichedAdvanced}}}
		</prose-mirror>
	{{else}}
		{{{enrichedAdvanced}}}
	{{/if}}
</section>