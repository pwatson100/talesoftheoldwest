{{! Description Tab }}
<section class='tab qualities {{tab.cssClass}}' data-group='primary' data-tab='qualities'>
	{{#if (eq system.subtype 'shootin')}}
		<div style='height: 489px; overflow-x: auto;'>
			<div class='heading' style='margin-top:30px'>{{toUpperCase (localize 'TALESOFTHEOLDWEST.Item.General.rwQualities')}}</div>
			<ol class='items-list'>
				<li class='item grid-talent-items items-header'>
					<div class='item-name TCol2'>{{toUpperCase (localize 'TALESOFTHEOLDWEST.General.name')}}</div>
				</li>
				{{#each system.featureModifiers as |item id|}}
					{{#if (eq item.type 'shootin')}}
						{{#if (eq item.feature 'quality')}}
							<li class='item grid-talent-items' data-item-id='{{item._id}}' data-drag='false' data-document-class='Weapon Quality'>
								<div class='item-image TCol11'>
									<a><img src='{{item.img}}' title='{{item.name}}' width='24' height='24' /></a>
								</div>
								<div class='item-name TCol12' title='{{striptags item.description}}'>{{item.name}}</div>
								<div class='item-controls TCol14'>
									<a
										class='item-control item-edit quality'
										data-action='viewFeature'
										data-actor='{{actor.id}}'
										data-item-id='{{item.id}}'
										data-featureid='{{item.featureId}}'
										title='{{localize "DOCUMENT.Update" type='Weapon Quality'}}'
									>
										<i class='fas fa-edit'></i>
									</a>
									<a
										class='item-control item-delete quality'
										data-action='removeFeature'
										data-actor='{{actor.id}}'
										data-item-id='{{item.id}}'
										title='{{localize "DOCUMENT.Delete" type='Weapon Quality'}}'
									>
										<i class='fas fa-trash'></i>
									</a>
								</div>
							</li>
						{{/if}}
