<section>
	<div class='form-group' style='padding: 1em 1em'>
		<label style='color: black'>{{capitalise (localize 'TALESOFTHEOLDWEST.Item.General.range')}}</label>
		<select id='rangeChoice' name='rangeChoice'>
			{{{selectOptions config.range_modifiers selected=rangeValue labelAttr='label' localize=true}}}
		</select>
	</div>
	<div class='form-group' style='padding: 1em 1em'>
		<label style='color: black'>{{capitalise (localize 'TALESOFTHEOLDWEST.General.calledShots')}}</label>
		<select id='calledShots' name='calledShots'>
			{{selectOptions config.called_shots selected=shotValue labelAttr='label' localize=true}}
		</select>
	</div>
	<div class='form-group' style='padding: 1em 1em'>
		<label style='color: black'>{{capitalise (localize 'TALESOFTHEOLDWEST.General.targetCover')}}</label>
		<select id='coverChoice' name='coverChoice'>
			{{selectOptions config.target_cover selected=coverValue labelAttr='label' localize=true}}
		</select>
	</div>
	<div class='form-group' style='padding: 1em 1em'>
		<label style='color: black'>{{capitalise (localize 'TALESOFTHEOLDWEST.General.targetSize')}}</label>
		<select id='sizeChoice' name='sizeChoice'>
			{{selectOptions config.target_size selected=sizeValue labelAttr='label' localize=true}}
		</select>
	</div>
	<div class='form-group' style='padding: 1em 1em'>
		<label style='color: black'>{{capitalise (localize 'TALESOFTHEOLDWEST.General.TargetVisibility')}}</label>
		<select id='visibilityChoice' name='visibilityChoice'>
			{{selectOptions config.target_visibility selected=visibilityValue labelAttr='label' localize=true}}
		</select>
	</div>
	{{#if dataset.canFan}}
		<div class='form-group' style='padding: 1em 1em 0em 1em'>
			<label class='resource-label' style='color: black'>{{capitalise (localize 'TALESOFTHEOLDWEST.Item.General.isFanning')}}</label>
			<input type='checkbox' id='isFanning' name='isFanning' />
			<label style='color: black'>{{capitalise (localize 'TALESOFTHEOLDWEST.Item.General.NoTargets')}}</label>
			<input class='statnum' type='number' id='numberOfTargets' name='numberOfTargets' value='1' data-dtype='Number' type='number' />
		</div>
	{{/if}}
	<div class='form-group' style='padding: 1em 1em'>
		<label style='color: black'>{{localize 'TALESOFTHEOLDWEST.DiceMod'}}</label>
		<input class='statnum' type='number' style='width: 20px' id='modifier' name='modifier' value='0' data-dtype='Number' type='number' />
	</div>
	{{#if dataset.conditional}}
		<h4 style='color: black'>{{localize 'TALESOFTHEOLDWEST.General.conditional'}}</h4>
		<label style='color: black'>{{keepMarkup dataset.conditional}}</label>
	{{/if}}
</section>